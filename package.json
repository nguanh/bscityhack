{
  "name": "mern-pure",
  "version": "1.0.0",
  "main": "build/server.js",
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "prestart": "yarn run build",
    "start": "concurrently \"yarn run server\" \"yarn run client\" ",
    "server": "nodemon -q server/server.ts",
    "client": "yarn --cwd client start",
    "watch": "babel --watch server ---out-dir build --extensions '.ts,.tsx'",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "yarn run build:types && yarn run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel server --out-dir build --extensions \\\".ts,.tsx\\\" --source-maps inline",
    "tsc": "tsc"
  },
  "license": "MIT",
  "dependencies": {
    "concurrently": "^5.0.0",
    "cors": "^2.8.5",
    "expo-cli": "^3.8.0",
    "express": "^4.17.1",
    "mongoose": "^5.7.7",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.0.0-beta0",
    "typescript": "^3.6.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-numeric-separator": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2",
    "@types/express": "^4.17.2",
    "@types/mongoose": "^5.5.30",
    "@types/node": "^12.12.7",
    "nodemon": "^1.19.4"
  }
}
